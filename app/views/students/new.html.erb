<h2 align="center">Sign up</h2>
<div align="center">
  <%= form_for Student.new do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :phone_no %><br />
      <%= f.text_field :phone_no, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_area :address, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :image %><br/>
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit "create" %>
    </div>
  <% end %>
</div>